<PropertyList>

  <filter>
    <name>Maximum positive load factor depending on flap position</name>
    <debug>false</debug>
    <type>gain</type>
    <input>
      <condition>
        <greater-than>
          <property>/controls/flight/flaps</property>
          <value>0</value>
        </greater-than>
      </condition>
      <value>2.0</value>
    </input>
    <input>3.8</input>
    <output>/limits/max-positive-g</output>
  </filter>

  <filter>
    <name>Maximum negative load factor depending on flap position</name>
    <debug>false</debug>
    <type>gain</type>
    <input>
      <condition>
        <greater-than>
          <property>/controls/flight/flaps</property>
          <value>0</value>
        </greater-than>
      </condition>
      <value>0.0</value>
    </input>
    <input>-1.52</input>
    <output>/limits/max-negative-g</output>
  </filter>

</PropertyList>
