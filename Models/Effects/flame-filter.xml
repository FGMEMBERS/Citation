<?xml version="1.0"?>

<PropertyList>

  <filter>
    <type>gain</type>
    <input>
      <expression>
        <div>
          <property>engines/engine/itt-norm</property>
          <value>10</value>
        </div>
      </expression>
    </input>
    <output>engines/engine/heatblur/thrust_density</output>
  </filter>
  <filter>
    <type>gain</type>
    <input>
      <expression>
        <div>
          <property>engines/engine[1]/itt-norm</property>
          <value>10</value>
        </div>
      </expression>
    </input>
    <output>engines/engine[1]/heatblur/thrust_density</output>
  </filter>

  <filter>
    <type>gain</type>
    <input>
      <expression>
        <difference>
          <value>0.5</value>
          <div>
            <property>engines/engine/fan</property>
            <value>400</value>
          </div>
        </difference>
      </expression>
    </input>
    <output>engines/engine/heatblur/thrust_collimation</output>
  </filter>
  <filter>
    <type>gain</type>
    <input>
      <expression>
        <difference>
          <value>0.5</value>
          <div>
            <property>engines/engine[1]/fan</property>
            <value>400</value>
          </div>
        </difference>
      </expression>
    </input>
    <output>engines/engine[1]/heatblur/thrust_collimation</output>
  </filter>

  <filter>
    <type>gain</type>
    <input>
      <expression>
        <sum>
          <div>
            <property>velocities/airspeed-kt</property>
            <value>1000</value>
          </div>
          <value>0.05</value>
        </sum>
      </expression>
    </input>
    <output>engines/engine/heatblur/noise_scale</output>
    <output>engines/engine[1]/heatblur/noise_scale</output>
  </filter>

  <filter>
    <type>gain</type>
    <input>
      <expression>
        <difference>
          <value>1</value>
          <div>
            <property>engines/engine/fan</property>
            <value>166.6666</value>
          </div>
        </difference>
      </expression>
    </input>
    <output>engines/engine/heatblur/noise_strength</output>
  </filter>
  <filter>
    <type>gain</type>
    <input>
      <expression>
        <difference>
          <value>1</value>
          <div>
            <property>engines/engine[1]/fan</property>
            <value>166.6666</value>
          </div>
        </difference>
      </expression>
    </input>
    <output>engines/engine[1]/heatblur/noise_strength</output>
  </filter>

</PropertyList>