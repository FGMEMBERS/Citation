<PropertyList>

    <filter>
        <name>ignition-left</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <or>
                    <and>
                        <property>controls/engines/engine[0]/ignition-sw</property>
                        <property>systems/electrical/outputs/main-right-xover/engine-ign-left</property>
                    </and>
                    <and>
                        <property>controls/engines/engine[0]/ignition-auto</property>
                        <property>systems/electrical/outputs/battery-hot/ignition</property>
                    </and>
                </or>
            </condition>
            <value>1</value>
        </input>
        <input>0</input>
        <output>controls/engines/engine[0]/ignition</output>
    </filter>

    <filter>
        <name>ignition-right</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <or>
                    <and>
                        <property>controls/engines/engine[1]/ignition-sw</property>
                        <property>systems/electrical/outputs/main-left/engine-ign-right</property>
                    </and>
                    <and>
                        <property>controls/engines/engine[1]/ignition-auto</property>
                        <property>systems/electrical/outputs/battery-hot/ignition</property>
                    </and>
                </or>
            </condition>
            <value>1</value>
        </input>
        <input>0</input>
        <output>controls/engines/engine[1]/ignition</output>
    </filter>

    <filter>
        <name>fan-spin-left</name>
        <debug>false</debug>
        <type>exponential</type>
        <filter-time>1.0</filter-time>
        <input>
            <condition>
                <greater-than>
                    <property>engines/engine[0]/fan</property>
                    <value>0.1</value>
                </greater-than>
            </condition>
            <property>engines/engine[0]/fan</property>
        </input>
        <input>
            <expression>
                <product>
                    <property>velocities/equivalent-kt</property>
                    <value>0.005</value>
                </product>
            </expression>
        </input>
        <output>engines/engine[0]/fan-spin</output>
    </filter>

    <filter>
        <name>fan-spin-right</name>
        <debug>false</debug>
        <type>exponential</type>
        <filter-time>1.0</filter-time>
        <input>
            <condition>
                <greater-than>
                    <property>engines/engine[1]/fan</property>
                    <value>0.1</value>
                </greater-than>
            </condition>
            <property>engines/engine[1]/fan</property>
        </input>
        <input>
            <expression>
                <product>
                    <property>velocities/equivalent-kt</property>
                    <value>0.005</value>
                </product>
            </expression>
        </input>
        <output>engines/engine[1]/fan-spin</output>
    </filter>

    <filter>
        <name>speedbrake-power</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <greater-than>
                    <property>systems/electrical/outputs/main-left/sys-speed-brake</property>
                    <value>20</value>
                </greater-than>
            </condition>
            <property>controls/flight/speedbrake-switch</property>
        </input>
        <input>0</input>
        <output>controls/flight/speedbrake-switch</output>
    </filter>

<!-- magnetic flux sensor -->

    <filter>
        <name>gyro-slaving</name>
        <debug>false</debug>
        <type>noise-spike</type>
        <max-rate-of-change>0.5</max-rate-of-change>
        <input>
            <condition>
                <and>
                    <greater-than>
                        <property>systems/electrical/outputs/main-left-xover/dc-dg1</property>
                        <value>20</value>
                    </greater-than>
                    <property>instrumentation/magnetic-flux-sensor/serviceable</property>
                    <not><property>controls/electric/gyro-mode-sw</property></not>
                </and>
            </condition>
            <expression>
                <dif>
                    <property>orientation/heading-magnetic-deg</property>
                    <property>orientation/heading-deg</property>
                </dif>
            </expression>
        </input>
        <input>
            <condition>
                <and>
                    <greater-than>
                        <property>systems/electrical/outputs/main-left-xover/dc-dg1</property>
                        <value>20</value>
                    </greater-than>
                    <property>controls/electric/gyro-mode-sw</property>
                    <equals>
                        <property>controls/electric/gyro-set-sw</property>
                        <value>1</value>
                    </equals>
                </and>
            </condition>
            <expression>
                <sum>
                    <property>instrumentation/heading-indicator/offset-deg</property>
                    <value>-1</value>
                </sum>
            </expression>
        </input>
        <input>
            <condition>
                <and>
                    <greater-than>
                        <property>systems/electrical/outputs/main-left-xover/dc-dg1</property>
                        <value>20</value>
                    </greater-than>
                    <property>controls/electric/gyro-mode-sw</property>
                    <equals>
                        <property>controls/electric/gyro-set-sw</property>
                        <value>-1</value>
                    </equals>
                </and>
            </condition>
            <expression>
                <sum>
                    <property>instrumentation/heading-indicator/offset-deg</property>
                    <value>1</value>
                </sum>
            </expression>
        </input>
        <input>instrumentation/heading-indicator/offset-deg</input>
        <period>
            <min>-180.0</min>
            <max>180.0</max>
        </period>
        <output>instrumentation/heading-indicator[0]/offset-deg</output>
        <output>instrumentation/heading-indicator[1]/offset-deg</output>
        <output>instrumentation/heading-indicator-dg/error-deg</output>
    </filter>

    <filter>
        <name>dg-correction</name>
        <debug>false</debug>
        <type>noise-spike</type>
        <max-rate-of-change>0.5</max-rate-of-change>
        <input>
            <expression>
                <product>
                    <property>instrumentation/heading-indicator-dg/offset-deg</property>
                    <value>-1.0</value>
                </product>
            </expression>
        </input>
        <output>instrumentation/heading-indicator-dg/align-deg</output>
    </filter>

<!-- electric power for turn-indicator -->
    <filter>
        <name>turn-indicator-power</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <property>controls/electric/avionics-switch</property>
            </condition>
            <property>systems/electrical/outputs/AC-26V/ac-adi1</property>
        </input>
        <input>0.0</input>
        <output>systems/electrical/outputs/turn-coordinator</output>
    </filter>

<!-- firewall shutoff -->

    <filter>
        <name>fire.shutoff.left.cover</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <and>
                    <property>controls/engines/engine[0]/firecover</property>
                    <greater-than>
                        <expression>
                            <sum>
                                <property>controls/engines/engine[0]/firecover-act</property>
                                <value>1</value>
                            </sum>
                        </expression>
                        <property>sim/time/elapsed-sec</property>
                    </greater-than>
                </and>
            </condition>
            <value>1</value>
        </input>
        <input>0</input>
        <output>controls/engines/engine[0]/firecover</output>
    </filter>

    <filter>
        <name>fire.shutoff.right.cover</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <and>
                    <property>controls/engines/engine[1]/firecover</property>
                    <greater-than>
                        <expression>
                            <sum>
                                <property>controls/engines/engine[1]/firecover-act</property>
                                <value>1</value>
                            </sum>
                        </expression>
                        <property>sim/time/elapsed-sec</property>
                    </greater-than>
                </and>
            </condition>
            <value>1</value>
        </input>
        <input>0</input>
        <output>controls/engines/engine[1]/firecover</output>
    </filter>


<!-- gear warn -->

    <filter>
        <name>gear.warn.horn</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <and>
                    <property>systems/electrical/outputs/main-left/warn-gear</property>
                    <or>
                        <and>
                            <greater-than>
                                <property>surface-positions/flap-pos-norm</property>
                                <value>0.38</value>
                            </greater-than>
                            <or>
                                <less-than>
                                    <property>gear/gear[0]/position-norm</property>
                                    <value>1.00</value>
                                </less-than>
                                <less-than>
                                    <property>gear/gear[1]/position-norm</property>
                                    <value>1.00</value>
                                </less-than>
                                <less-than>
                                    <property>gear/gear[2]/position-norm</property>
                                    <value>1.00</value>
                                </less-than>
                            </or>
                        </and>
                        <equals>
                            <property>controls/electric/system-test</property>
                            <value>2</value>
                        </equals>
                    </or>
                </and>
            </condition>
            <value>1</value>
        </input>
        <input>0</input>
        <output>controls/gear/warn-horn</output>
    </filter>

    <filter>
        <name>gear.warn.silence</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <not><property>controls/gear/warn-horn</property></not>
            </condition>
            <value>0</value>
        </input>
        <input>controls/gear/warn-silence</input>
        <output>controls/gear/warn-silence</output>
    </filter>

<!-- speed warn -->

    <filter>
        <name>speed.warn.horn</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <and>
                    <property>systems/electrical/outputs/main-right-xover/warn-speed</property>
                    <or>
                        <greater-than>
                            <property>velocities/airspeed-kt</property>
                            <property>limits/vmo</property>
                        </greater-than>
                        <greater-than>
                            <property>velocities/mach</property>
                            <property>limits/mmo</property>
                        </greater-than>
                        <equals>
                            <property>controls/electric/system-test</property>
                            <value>7</value>
                        </equals>
                    </or>
                </and>
            </condition>
            <value>1</value>
        </input>
        <input>0</input>
        <output>controls/electric/overspeed-horn</output>
    </filter>

<!-- antiskid -->

    <filter>
        <name>antiskid-test</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <and>
                    <property>controls/gear/antiskid-test</property>
                    <greater-than>
                        <expression>
                            <sum>
                                <property>controls/gear/antiskid-test</property>
                                <value>4</value>
                            </sum>
                        </expression>
                        <property>sim/time/elapsed-sec</property>
                    </greater-than>
                </and>
            </condition>
            <property>controls/gear/antiskid-test</property>
        </input>
        <input>0</input>
        <output>controls/gear/antiskid-test</output>
    </filter>

    <filter>
        <name>antiskid</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <and>
                    <property>systems/electrical/outputs/main-left/sys-skid-ctrl</property>
                    <property>controls/gear/antiskid-sw</property>
                    <less-than>
                        <property>controls/gear/antiskid-test</property>
                        <value>1</value>
                    </less-than>
                </and>
            </condition>
            <value>1</value>
        </input>
        <input>0</input>
        <output>controls/gear/antiskid</output>
    </filter>

    <filter>
        <name>skid-ballance</name>
        <debug>false</debug>
        <type>gain</type>

        <input>
            <condition>
                <and>
                    <property>controls/electric/maingear-switch</property>
                    <property>controls/gear/antiskid</property>
                    <greater-than>
                        <property>gear/gear[1]/rollspeed-ms</property>
                        <property>gear/gear[2]/rollspeed-ms</property>
                    </greater-than>
                    <greater-than>
                        <property>gear/gear[0]/rollspeed-ms</property>
                        <value>6.2</value> <!-- 12 kts -->
                    </greater-than>
                </and>
            </condition>
            <expression>
                <dif>
                    <div>
                        <property>gear/gear[1]/rollspeed-ms</property>
                        <div>
                            <sum>
                                <property>gear/gear[1]/rollspeed-ms</property>
                                <property>gear/gear[2]/rollspeed-ms</property>
                            </sum>
                            <value>2.0</value>
                        </div>
                    </div>
                    <value>1.0</value>
                </dif>
            </expression>
        </input>

        <input>
            <condition>
                <and>
                    <property>controls/electric/maingear-switch</property>
                    <property>controls/gear/antiskid</property>
                    <greater-than>
                        <property>gear/gear[2]/rollspeed-ms</property>
                        <property>gear/gear[1]/rollspeed-ms</property>
                    </greater-than>
                    <greater-than>
                        <property>gear/gear[0]/rollspeed-ms</property>
                        <value>6.2</value> <!-- 12 kts -->
                    </greater-than>
                </and>
            </condition>
            <expression>
                <dif>
                    <value>1.0</value>
                    <div>
                        <property>gear/gear[2]/rollspeed-ms</property>
                        <div>
                            <sum>
                                <property>gear/gear[1]/rollspeed-ms</property>
                                <property>gear/gear[2]/rollspeed-ms</property>
                            </sum>
                            <value>2.0</value>
                        </div>
                    </div>
                </dif>
            </expression>
        </input>

        <input><value>0.0</value></input>
        <output>controls/gear/skid-ballance</output>
    </filter>

    <filter>
        <name>brake-left</name>
        <debug>false</debug>
        <type>gain</type>

<!-- Anti-Skid System -->
        <input>
            <condition>
                <less-than>
                    <property>controls/gear/skid-ballance</property>
                    <value>0.0</value>
                </less-than>
            </condition>
            <expression>
                <sum>
                    <property>controls/gear/brake-left</property>
                    <product>
                        <property>controls/gear/skid-ballance</property>
                        <property>gear/gear[0]/rollspeed-ms</property>
                        <value>0.5</value>
                    </product>
                </sum>
            </expression>
        </input>

<!-- Locked Wheel Crossover Protection (more than 40 kts) -->
        <input>
            <condition>
                <and>
                    <greater-than>
                        <property>gear/gear[0]/rollspeed-ms</property>
                        <value>20.6</value>
                    </greater-than>
                    <less-than>
                        <property>controls/gear/skid-ballance</property>
                        <value>-0.5</value>
                    </less-than>
                </and>
            </condition>
            <expression>
                <sum>
                    <property>controls/gear/brake-left</property>
                    <product>
                        <property>controls/gear/skid-ballance</property>
                        <property>gear/gear[0]/rollspeed-ms</property>
                    </product>
                </sum>
            </expression>
        </input>

<!-- normal braking -->
        <input>
            <condition>
                <property>controls/electric/maingear-switch</property>
            </condition>
            <property>controls/gear/brake-left</property>
        </input>

        <input>0.0</input>
        <min>0.0</min>
        <max>1.0</max>
        <output>controls/gear/brake-left-real</output>
    </filter>

    <filter>
        <name>brake-right</name>
        <debug>false</debug>
        <type>gain</type>

<!-- Anti-Skid System -->
        <input>
            <condition>
                <greater-than>
                    <property>controls/gear/skid-ballance</property>
                    <value>0.0</value>
                </greater-than>
            </condition>
            <expression>
                <dif>
                    <property>controls/gear/brake-right</property>
                    <product>
                        <property>controls/gear/skid-ballance</property>
                        <property>gear/gear[0]/rollspeed-ms</property>
                        <value>0.5</value>
                    </product>
                </dif>
            </expression>
        </input>

<!-- Locked Wheel Crossover Protection (more than 40 kts) -->
        <input>
            <condition>
                <and>
                    <greater-than>
                        <property>gear/gear[0]/rollspeed-ms</property>
                        <value>20.6</value>
                    </greater-than>
                    <greater-than>
                        <property>controls/gear/skid-ballance</property>
                        <value>0.5</value>
                    </greater-than>
                </and>
            </condition>
            <expression>
                <dif>
                    <property>controls/gear/brake-right</property>
                    <product>
                        <property>controls/gear/skid-ballance</property>
                        <property>gear/gear[0]/rollspeed-ms</property>
                    </product>
                </dif>
            </expression>
        </input>

<!-- normal braking -->
        <input>
            <condition>
                <property>controls/electric/maingear-switch</property>
            </condition>
            <property>controls/gear/brake-right</property>
        </input>

        <input>0.0</input>
        <min>0.0</min>
        <max>1.0</max>
        <output>controls/gear/brake-right-real</output>
    </filter>

<!-- external power cutoff -->
    <filter>
        <name>external-power-cutoff</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <or>
                    <not><property>controls/electric/maingear-switch</property></not>
                    <not><property>controls/gear/brake-parking</property></not>
                </or>
            </condition>
            <value>false</value>
        </input>
        <input>controls/electric/external-power</input>
        <output>controls/electric/external-power</output>
    </filter>

<!-- reverser -->
    <filter>
        <name>left-reverser</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <and>
                    <not><property>controls/engines/engine[0]/reverser-emer-sw</property></not>
                    <property>controls/electric/maingear-switch</property>
                    <property>systems/electrical/outputs/main-left/sys-thrustrev-left</property>
                    <or>
                        <greater-than>
                            <property>engines/engine[0]/turbine</property>
                            <value>40</value>
                        </greater-than>
                        <greater-than>
                            <property>engines/engine[1]/turbine</property>
                            <value>40</value>
                        </greater-than>
                    </or>
                </and>
            </condition>
            <property>controls/engines/engine[0]/reverser</property>
        </input>
        <input>
            <condition>
                <and>
                    <property>controls/engines/engine[0]/reverser-emer-sw</property>
                    <property>controls/electric/maingear-switch</property>
                    <property>systems/electrical/outputs/main-right-xover/sys-thrustrev-right</property>
                    <or>
                        <greater-than>
                            <property>engines/engine[0]/turbine</property>
                            <value>40</value>
                        </greater-than>
                        <greater-than>
                            <property>engines/engine[1]/turbine</property>
                            <value>40</value>
                        </greater-than>
                    </or>
                </and>
            </condition>
            <property>controls/engines/engine[1]/reverser</property>
        </input>
        <output>controls/engines/engine[0]/reverser-real</output>
    </filter>

    <filter>
        <name>left-reverser</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
            <condition>
                <and>
                    <not><property>controls/engines/engine[1]/reverser-emer-sw</property></not>
                    <property>controls/electric/maingear-switch</property>
                    <property>systems/electrical/outputs/main-right-xover/sys-thrustrev-right</property>
                    <or>
                        <greater-than>
                            <property>engines/engine[0]/turbine</property>
                            <value>40</value>
                        </greater-than>
                        <greater-than>
                            <property>engines/engine[1]/turbine</property>
                            <value>40</value>
                        </greater-than>
                    </or>
                </and>
            </condition>
            <property>controls/engines/engine[1]/reverser</property>
        </input>
        <input>
            <condition>
                <and>
                    <property>controls/engines/engine[1]/reverser-emer-sw</property>
                    <property>controls/electric/maingear-switch</property>
                    <property>systems/electrical/outputs/main-left/sys-thrustrev-left</property>
                    <or>
                        <greater-than>
                            <property>engines/engine[0]/turbine</property>
                            <value>40</value>
                        </greater-than>
                        <greater-than>
                            <property>engines/engine[1]/turbine</property>
                            <value>40</value>
                        </greater-than>
                    </or>
                </and>
            </condition>
            <property>controls/engines/engine[0]/reverser</property>
        </input>
        <output>controls/engines/engine[1]/reverser-real</output>
    </filter>

<!-- system test -->
    <filter>
        <name>system-test</name>
        <debug>false</debug>
        <type>gain</type>
        <input>
<!-- TODO: conditions for every system with power over the correct circuit-breaker -->
            <condition>
                <property>systems/electrical/buses/battery</property>
            </condition>
            <property>controls/electric/system-test-sw</property>
        </input>
        <input>0</input>
        <output>controls/electric/system-test</output>
    </filter>

</PropertyList>
