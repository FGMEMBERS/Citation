<PropertyList>

  <path>vor-ind.ac</path>

  <effect>
    <condition>
      <greater-than>
        <property>sim/version/flightgear</property>
        <value>3.4.999</value>
      </greater-than>
    </condition>
    <inherits-from>Aircraft/Citation/Models/Effects/interior-shadow/citationII-interior-flightdeck</inherits-from>
    <object-name>VOR</object-name>
    <object-name>VOR.face</object-name>
    <object-name>VOR.off</object-name>
    <object-name>VOR.to-flag</object-name>
    <object-name>gs.needle</object-name>
    <object-name>vor.needle</object-name>
  </effect>

  <animation>
    <type>select</type>
    <object-name>VOR.to-flag</object-name>
    <condition>
      <property>instrumentation/nav/to-flag</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>VOR.off</object-name>
    <condition>
      <not>
        <property>instrumentation/nav/in-range</property>
      </not>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>vor.needle</object-name>
    <property>instrumentation/nav/vor-loc-deflection</property>
    <interpolation>
      <entry><ind>-10.0</ind><dep>-39</dep></entry>
      <entry><ind>10.0</ind><dep>39</dep></entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.020</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>gs.needle</object-name>
    <property>instrumentation/nav/vor-gs-deflection</property>
    <interpolation>
      <entry><ind>-2.5</ind><dep>-39</dep></entry>
      <entry><ind>2.5</ind><dep>39</dep></entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>-0.020</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

</PropertyList>
