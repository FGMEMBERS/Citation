<PropertyList>

  <filter>
    <type>gain</type>
    <name>ctl22-comm1-service</name>
    <input>
      <condition>
        <and>
          <greater-than>
            <property>instrumentation/ctl22[1]/power-knob</property>
            <value>0</value>
          </greater-than>
          <property>systems/electrical/outputs/comm[1]</property>
        </and>
      </condition>
      <value>1</value>
    </input>
    <input>0</input>
    <output>instrumentation/comm[1]/serviceable</output>
  </filter>

  <filter>
    <type>gain</type>
    <name>ctl22-comm1-on</name>
    <input>
      <condition>
        <greater-than>
          <property>instrumentation/ctl22[1]/power-knob</property>
          <value>0</value>
        </greater-than>
      </condition>
      <value>1</value>
    </input>
    <input>0</input>
    <output>instrumentation/comm[1]/power-btn</output>
  </filter>

  <filter>
    <type>gain</type>
    <name>ctl22-comm1-sq</name>
    <input>
      <condition>
        <equals>
          <property>instrumentation/ctl22[1]/power-knob</property>
          <value>2</value>
        </equals>
      </condition>
      <value>0.0</value>
    </input>
    <input>0.4</input>
    <output>instrumentation/comm[1]/cutoff-signal-quality</output>
  </filter>

  <filter>
    <type>gain</type>
    <name>ctl22-comm1-toggle-run</name>
    <input>
      <condition>
          <not><property>instrumentation/ctl22[1]/toggle</property></not>
      </condition>
      <value>0.0</value>
    </input>
    <input>
      <condition>
        <and>
          <property>instrumentation/ctl22[1]/toggle</property>
          <less-than>
            <property>instrumentation/ctl22[1]/toggle-run</property>
            <value>1.0</value>
          </less-than>
        </and>
      </condition>
      <expression>
        <sum>
          <property>sim/time/elapsed-sec</property>
          <value>0.3</value>
        </sum>
      </expression>
    </input>
    <input>
      <condition>
        <and>
          <property>instrumentation/ctl22[1]/toggle</property>
          <greater-than>
            <property>sim/time/elapsed-sec</property>
            <property>instrumentation/ctl22[1]/toggle-run</property>
          </greater-than>
        </and>
      </condition>
      <value>0.0</value>
    </input>
    <input>instrumentation/ctl22[1]/toggle-run</input>
    <output>instrumentation/ctl22[1]/toggle-run</output>
  </filter>

  <filter>
    <type>gain</type>
    <name>ctl22-comm1-toggle</name>
    <input>
      <condition>
        <and>
          <property>instrumentation/ctl22[1]/toggle</property>
          <greater-than>
            <property>sim/time/elapsed-sec</property>
            <property>instrumentation/ctl22[1]/toggle-run</property>
          </greater-than>
        </and>
      </condition>
      <value>0</value>
    </input>
    <input>instrumentation/ctl22[1]/toggle</input>
    <output>instrumentation/ctl22[1]/toggle</output>
  </filter>

  <filter>
    <type>gain</type>
    <name>ctl22-comm1-mem-run</name>
    <input>
      <condition>
          <not><property>instrumentation/ctl22[1]/mem-mode</property></not>
      </condition>
      <value>0.0</value>
    </input>
    <input>
      <condition>
        <and>
            <property>instrumentation/ctl22[1]/mem-mode</property>
            <less-than>
                <property>instrumentation/ctl22[1]/mem-run</property>
                <value>1.0</value>
            </less-than>
        </and>
      </condition>
      <expression>
        <sum>
          <property>sim/time/elapsed-sec</property>
          <value>5.0</value>
        </sum>
      </expression>
    </input>
    <input>instrumentation/ctl22[1]/mem-run</input>
    <output>instrumentation/ctl22[1]/mem-run</output>
  </filter>

  <filter>
    <type>gain</type>
    <name>ctl22-comm1-mem-mode</name>
    <input>
      <condition>
        <and>
            <property>instrumentation/ctl22[1]/mem-mode</property>
            <greater-than>
                <property>sim/time/elapsed-sec</property>
                <property>instrumentation/ctl22[1]/mem-run</property>
            </greater-than>
        </and>
      </condition>
      <value>0</value>
    </input>
    <input>instrumentation/ctl22[1]/mem-mode</input>
    <output>instrumentation/ctl22[1]/mem-mode</output>
  </filter>

</PropertyList>
