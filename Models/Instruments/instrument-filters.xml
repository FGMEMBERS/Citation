  <filter>
    <name>Radar altimeter: filter for mechanical needle</name>
    <debug>false</debug>
    <type>exponential</type>
    <filter-time>.2</filter-time>

    <input>
      <condition>
        <less-than>
          <property>systems/electrical/ac-volts</property>
          <value>1</value>
        </less-than>
      </condition>
      <property>instrumentation/radar-altimeter/radar-altitude-ft</property>
    </input>

    <input>
      <condition>
        <less-than>
          <property>position/altitude-agl-ft</property>
          <value>-25.0</value>
        </less-than>
      </condition>
      <value>-25.0</value>
    </input>

    <input>
      <condition>
        <greater-than>
          <property>position/altitude-agl-ft</property>
          <value>2500.0</value>
        </greater-than>
      </condition>
      <value>3150.0</value>
    </input>

    <input>
      <property>position/altitude-agl-ft</property>
    </input>

    <output>instrumentation/radar-altimeter/radar-altitude-ft</output>
  </filter>

  <!-- Filter for CDU -->

  <filter>
    <name>Turn the CDU on and off with the avionics switch</name>
    <debug>false</debug>
    <type>gain</type>
    <input>
      <condition>
        <greater-than>
          <property>systems/electrical/ac-volts</property>
          <value>1.0</value>
        </greater-than>
      </condition>
      <value>1</value>
    </input>
    <input>0</input>
    <output>instrumentation/cdu/serviceable</output>
  </filter>

  <filter>
    <name>Turn the GPWS on and off with the circuit breaker (Ground Prox) and power</name>
    <debug>false</debug>
    <type>gain</type>
    <input>
      <condition>
        <and>
          <greater-than>
            <property>systems/electrical/outputs/bus/right</property>
            <value>1.0</value>
          </greater-than>
          <property>controls/electric/circuit-breakers/bus-right/cb-ac-gpws</property>
        </and>
      </condition>
      <value>1</value>
    </input>
    <input>0</input>
    <output>instrumentation/mk-viii/serviceable</output>
  </filter>

  <!-- VOR: deflection filter for mechanical needles -->

