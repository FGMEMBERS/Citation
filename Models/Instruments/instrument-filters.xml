  <!-- altimeter: correct rounded digits and avoid wrong precision -->

  <filter>
    <name>InHg adjusting</name>
    <debug>false</debug>
    <type>gain</type>
    <input>
      <expression>
        <floor>
          <sum>
            <product>
              <property>instrumentation/altimeter/setting-inhg</property>
              <value>100.0</value>
            </product>
            <value>0.5</value>
          </sum>
        </floor>
      </expression>
    </input>
    <output>instrumentation/altimeter/setting-inhg-display</output>
  </filter>

