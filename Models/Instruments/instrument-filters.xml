      <condition>
        <property>instrumentation/nav[0]/gs-in-range</property>
      </condition>
      <property>instrumentation/nav[0]/gs-needle-deflection</property>
    </input>
    <input><value>0.0</value></input>
    <min>-2.5</min>
    <max>2.5</max>
    <output>instrumentation/nav[0]/vor-gs-deflection</output>
  </filter>

