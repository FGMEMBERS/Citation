<?xml version = '1.0' encoding = 'UTF-8' ?>
<PropertyList>

<path>lightingpanel.ac</path>

  <effect>
    <condition>
      <greater-than>
	<property>sim/version/flightgear</property>
	<value>3.4.999</value>
      </greater-than>
    </condition>
    <inherits-from>Aircraft/Citation/Models/Effects/interior-shadow/citationII-interior-flightdeck</inherits-from>
    <object-name>Beacon.sw</object-name>
    <object-name>CenterPanelLight.knob</object-name>
    <object-name>EL.knob</object-name>
    <object-name>FloodLight.knob</object-name>
    <object-name>LandingLightLeft.sw</object-name>
    <object-name>LandingLightRight.sw</object-name>
    <object-name>LeftPanelLight.knob</object-name>
    <object-name>PanelLight.sw</object-name>
    <object-name>PassSafetySeatBelt.sw</object-name>
    <object-name>RightPanelLight.knob</object-name>
    <object-name>StdbyGyroTest.sw</object-name>
    <object-name>lighting.panel</object-name>
  </effect>

    <animation>
        <type>rotate</type>
        <object-name>Beacon.sw</object-name>
        <property>controls/lighting/beacon-switch</property>
        <factor>30</factor>
        <center>
            <x-m>0.005</x-m>
            <y-m>0.002</y-m>
            <z-m>0.0</z-m>
        </center>
        <axis>
            <x>0.0</x>
            <y>-1.0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>LandingLightLeft.sw</object-name>
        <property>controls/lighting/landing-light-switch</property>
        <factor>30</factor>
        <center>
            <x-m>0.005</x-m>
            <y-m>0.002</y-m>
            <z-m>0.0</z-m>
        </center>
        <axis>
            <x>0.0</x>
            <y>-1.0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>LandingLightRight.sw</object-name>
        <property>controls/lighting/landing-light-switch[1]</property>
        <factor>30</factor>
        <center>
            <x-m>0.005</x-m>
            <y-m>0.002</y-m>
            <z-m>0.0</z-m>
        </center>
        <axis>
            <x>0.0</x>
            <y>-1.0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>PanelLight.sw</object-name>
        <property>controls/lighting/panel-lights-switch</property>
        <factor>30</factor>
        <center>
            <x-m>0.005</x-m>
            <y-m>0.002</y-m>
            <z-m>0.0</z-m>
        </center>
        <axis>
            <x>0.0</x>
            <y>-1.0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>FloodLight.knob</object-name>
        <property>controls/lighting/flood-light-norm</property>
        <factor>300</factor>
	<center>
	    <x-m>0</x-m>
            <y-m>-0.11689</y-m>
            <z-m>0.004096</z-m>
	</center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/lighting/flood-light-norm</property>
                <factor>0.1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>CenterPanelLight.knob</object-name>
        <property>controls/lighting/center-panel-norm</property>
        <factor>300</factor>
	<center>
	    <x-m>0</x-m>
            <y-m>-0.0435</y-m>
            <z-m>0.004096</z-m>
	</center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/lighting/center-panel-norm</property>
                <factor>0.1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>property-adjust</command>
                <property>controls/lighting/panel-norm</property>
                <factor>0.03</factor>
                <min>0</min>
                <max>0.3</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>LeftPanelLight.knob</object-name>
        <property>controls/lighting/left-panel-norm</property>
        <factor>300</factor>
	<center>
	    <x-m>0</x-m>
            <y-m>-0.0687</y-m>
            <z-m>0.004096</z-m>
	</center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/lighting/left-panel-norm</property>
                <factor>0.1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>RightPanelLight.knob</object-name>
        <property>controls/lighting/right-panel-norm</property>
        <factor>300</factor>
	<center>
	    <x-m>0</x-m>
            <y-m>-0.01622</y-m>
            <z-m>0.004096</z-m>
	</center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/lighting/right-panel-norm</property>
                <factor>0.1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>EL.knob</object-name>
        <property>controls/lighting/instrument-lights-norm</property>
        <factor>300</factor>
	<center>
	    <x-m>0</x-m>
            <y-m>0.01015</y-m>
            <z-m>0.004096</z-m>
	</center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <action>
	    <binding>
                <command>property-adjust</command>
                <property>controls/lighting/instrument-lights-norm</property>
                <factor>0.1</factor>
                <min>0.0</min>
                <max>1.0</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

<!-- hotspots -->

<animation>
    <type>pick</type>
    <object-name>Beacon.sw</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>property-toggle</command>
	    <property>controls/lighting/beacon-switch</property> <!-- handled in Systems/electrical.xml -->
        </binding>
        <binding>
            <command>property-toggle</command>
            <property>sim/sound/click</property>
        </binding>
    </action>
</animation>

<animation>
    <type>pick</type>
    <object-name>LandingLightLeft.sw</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>property-toggle</command>
            <property>controls/lighting/landing-light-switch</property>
        </binding>
        <binding>
            <command>property-toggle</command>
            <property>sim/sound/click</property>
        </binding>
    </action>
</animation>

<animation>
    <type>pick</type>
    <object-name>LandingLightRight.sw</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>property-toggle</command>
            <property>controls/lighting/landing-light-switch[1]</property>
        </binding>
        <binding>
            <command>property-toggle</command>
            <property>sim/sound/click</property>
        </binding>
    </action>
</animation>

<animation>
    <type>pick</type>
    <object-name>PanelLight.sw</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
            <command>property-toggle</command>
            <property>controls/lighting/panel-lights-switch</property>
        </binding>
        <binding>
            <command>property-toggle</command>
            <property>sim/sound/click</property>
        </binding>
    </action>
</animation>

</PropertyList>
