<PropertyList>

  <path>altalerter.ac</path>

  <effect>
    <condition>
      <greater-than>
	<property>sim/version/flightgear</property>
	<value>3.4.999</value>
      </greater-than>
    </condition>
    <inherits-from>Models/Effects/interior-shadow/citationII-interior-flightdeck</inherits-from>
    <object-name>AAlerter</object-name>
    <object-name>AAlerter.display</object-name>
    <object-name>Select.knob</object-name>
    <object-name>Set.knob</object-name>
    <object-name>digit1</object-name>
    <object-name>digit10</object-name>
    <object-name>digit100</object-name>
    <object-name>dim.knob</object-name>
  </effect>

  <animation>
    <type>select</type>
    <object-name>digit100</object-name>
    <object-name>digit10</object-name>
    <object-name>digit1</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/ac-volts</property>
        <value>90</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>digit100</object-name>
    <property>autopilot/settings/target-altitude-ft</property>
    <factor>0.00001</factor>
    <step>10000</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>digit10</object-name>
    <property>autopilot/settings/target-altitude-ft</property>
    <factor>0.0001</factor>
    <step>1000</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>digit1</object-name>
    <property>autopilot/settings/target-altitude-ft</property>
    <factor>0.001</factor>
    <step>100</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!--  Hotspots -->

  <animation>
    <type>knob</type>
    <object-name>Set.knob</object-name>
    <property>autopilot/settings/target-altitude-ft</property>
    <value>1</value>
    <center>
      <x-m>0</x-m>
      <y-m>0.0178435</y-m>
      <z-m>-0.0007795</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <factor>1</factor>
    <action>
      <binding>
        <condition>
          <greater-than>
            <property>systems/electrical/ac-volts</property>
            <value>90</value>
          </greater-than>
        </condition>
        <command>property-adjust</command>
        <property>autopilot/settings/target-altitude-ft</property>
        <factor>100</factor>
        <min>500</min>
        <max>43000</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>target-altitude</tooltip-id>
        <label>Target altitude: %d ft</label>
        <property>autopilot/settings/target-altitude-ft</property>
      </binding>
    </hovered>
  </animation>

</PropertyList>
