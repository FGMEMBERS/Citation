<PropertyList>

<!-- This filter is disabled because of a bug in FG that disable nav2 if nav1 not servicable -->
<!--
  <filter>
    <type>gain</type>
    <name>ctl32-nav0-service</name>
    <input>
      <condition>
        <and>
          <greater-than>
            <property>instrumentation/ctl32[0]/power-knob</property>
            <value>0</value>
          </greater-than>
          <property>systems/electrical/outputs/nav[0]</property>
        </and>
      </condition>
      <value>1</value>
    </input>
    <input>0</input>
    <output>instrumentation/nav[0]/serviceable</output>
  </filter>
-->
  <filter>
    <type>gain</type>
    <name>ctl32-nav0-on</name>
    <input>
      <condition>
        <greater-than>
          <property>instrumentation/ctl32[0]/power-knob</property>
          <value>0</value>
        </greater-than>
      </condition>
      <value>1</value>
    </input>
    <input>0</input>
    <output>instrumentation/nav[0]/power-btn</output>
  </filter>

  <filter>
    <type>gain</type>
    <name>ctl32-nav0-toggle-run</name>
    <input>
      <condition>
          <not><property>instrumentation/ctl32[0]/toggle</property></not>
      </condition>
      <value>0.0</value>
    </input>
    <input>
      <condition>
        <and>
          <property>instrumentation/ctl32[0]/toggle</property>
          <less-than>
            <property>instrumentation/ctl32[0]/toggle-run</property>
            <value>1.0</value>
          </less-than>
        </and>
      </condition>
      <expression>
        <sum>
          <property>sim/time/elapsed-sec</property>
          <value>0.3</value>
        </sum>
      </expression>
    </input>
    <input>
      <condition>
        <and>
          <property>instrumentation/ctl32[0]/toggle</property>
          <greater-than>
            <property>sim/time/elapsed-sec</property>
            <property>instrumentation/ctl32[0]/toggle-run</property>
          </greater-than>
        </and>
      </condition>
      <value>0.0</value>
    </input>
    <input>instrumentation/ctl32[0]/toggle-run</input>
    <output>instrumentation/ctl32[0]/toggle-run</output>
  </filter>

  <filter>
    <type>gain</type>
    <name>ctl32-nav0-toggle</name>
    <input>
      <condition>
        <and>
          <property>instrumentation/ctl32[0]/toggle</property>
          <greater-than>
            <property>sim/time/elapsed-sec</property>
            <property>instrumentation/ctl32[0]/toggle-run</property>
          </greater-than>
        </and>
      </condition>
      <value>0</value>
    </input>
    <input>instrumentation/ctl32[0]/toggle</input>
    <output>instrumentation/ctl32[0]/toggle</output>
  </filter>

  <filter>
    <type>gain</type>
    <name>ctl32-nav0-mem-run</name>
    <input>
      <condition>
          <not><property>instrumentation/ctl32[0]/mem-mode</property></not>
      </condition>
      <value>0.0</value>
    </input>
    <input>
      <condition>
        <and>
            <property>instrumentation/ctl32[0]/mem-mode</property>
            <less-than>
                <property>instrumentation/ctl32[0]/mem-run</property>
                <value>1.0</value>
            </less-than>
        </and>
      </condition>
      <expression>
        <sum>
          <property>sim/time/elapsed-sec</property>
          <value>5.0</value>
        </sum>
      </expression>
    </input>
    <input>instrumentation/ctl32[0]/mem-run</input>
    <output>instrumentation/ctl32[0]/mem-run</output>
  </filter>

  <filter>
    <type>gain</type>
    <name>ctl32-nav0-mem-mode</name>
    <input>
      <condition>
        <and>
            <property>instrumentation/ctl32[0]/mem-mode</property>
            <greater-than>
                <property>sim/time/elapsed-sec</property>
                <property>instrumentation/ctl32[0]/mem-run</property>
            </greater-than>
        </and>
      </condition>
      <value>0</value>
    </input>
    <input>instrumentation/ctl32[0]/mem-mode</input>
    <output>instrumentation/ctl32[0]/mem-mode</output>
  </filter>

</PropertyList>
