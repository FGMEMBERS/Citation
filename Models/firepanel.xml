<?xml version="1.0" encoding="utf-8"?>
<PropertyList>

    <path>firepanel.ac</path>

<!-- show objects only in model 0 -->
    <animation>
        <type>select</type>
        <object-name>rev.panel</object-name>
        <object-name>rev.left.emer-sw</object-name>
        <object-name>rev.right.emer-sw</object-name>
        <condition>
            <equals>
                <property>sim/model/variant</property>
                <value>0</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>rev.blind</object-name>
        <condition>
            <property>sim/model/variant</property>
        </condition>
    </animation>

<!-- Lights -->
    <animation>
        <type>select</type>
        <object-name>rev.left.arm</object-name>
        <condition>
            <greater-than>
                <property>surface-positions/reverser-norm[0]</property>
                <value>0</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>rev.left.unlock</object-name>
        <condition>
            <greater-than>
                <property>surface-positions/reverser-norm[0]</property>
                <value>0.05</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>rev.left.deploy</object-name>
        <condition>
            <greater-than>
                <property>surface-positions/reverser-norm[0]</property>
                <value>0.95</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>rev.right.arm</object-name>
        <condition>
            <greater-than>
                <property>surface-positions/reverser-norm[1]</property>
                <value>0</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>rev.right.unlock</object-name>
        <condition>
            <greater-than>
                <property>surface-positions/reverser-norm[1]</property>
                <value>0.05</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>rev.right.deploy</object-name>
        <condition>
            <greater-than>
                <property>surface-positions/reverser-norm[1]</property>
                <value>0.95</value>
            </greater-than>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>fire.bottle1.lit</object-name>
        <object-name>fire.bottle2.lit</object-name>
        <condition>
            <equals>
                <property>controls/electric/system-test</property>
                <value>99</value>
            </equals>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>fire.shutoff.left.lit</object-name>
        <condition>
            <or>
                <equals>
                    <property>controls/electric/system-test</property>
                    <value>99</value>
                </equals>
                <equals>
                    <property>controls/engines/engine[0]/fire-switch</property>
                    <value>1</value>
                </equals>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>fire.shutoff.right.lit</object-name>
        <condition>
            <or>
                <equals>
                    <property>controls/electric/system-test</property>
                    <value>99</value>
                </equals>
                <equals>
                    <property>controls/engines/engine[1]/fire-switch</property>
                    <value>1</value>
                </equals>
            </or>
        </condition>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>fire.shutoff.left.cover</object-name>
        <property>controls/engines/engine[0]/firecover</property>
        <factor>125</factor>
        <center>
            <x-m>0.0025</x-m>
            <y-m>-0.0195</y-m>
            <z-m>-0.0075</z-m>
        </center>
        <axis>
            <x>0.0</x>
            <y>-1.0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>fire.shutoff.right.cover</object-name>
        <property>controls/engines/engine[1]/firecover</property>
        <factor>125</factor>
        <center>
            <x-m>0.0025</x-m>
            <y-m>0.0195</y-m>
            <z-m>-0.0075</z-m>
        </center>
        <axis>
            <x>0.0</x>
            <y>-1.0</y>
            <z>0.0</z>
        </axis>
    </animation>
