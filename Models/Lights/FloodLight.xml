<?xml version="1.0"?>

<PropertyList>

 <path>coneFloodLight.ac</path>

     <animation>
        <type>select</type>
        <object-name>IntLight.FloodLight.cone</object-name>
        <condition>
            <and>
		<property>sim/rendering/rembrandt/enabled</property>
		<property>controls/lighting/PanelLightsSwitch</property>
		<greater-than>
                    <property>/sim/rendering/shaders/lights</property>
                    <value>2.0</value>
                </greater-than>
            </and>
	    <or>
                <greater-than>
                    <property>systems/electrical/left-bus</property>
                    <value>5</value>
                </greater-than>
		<greater-than>
                    <property>systems/electrical/right-bus</property>
                    <value>5</value>
                </greater-than>
	    </or>
        </condition>
    </animation>
    
    <animation>
	<type>light</type>
	<light-type>spot</light-type>
	<name>FloodLight</name>
	<object-name>IntLight.FloodLight.cone</object-name>
	<nopreview/>
	<position>
		<x>3.68365</x>
		<y>0.0</y>
		<z>1.33437</z>
	</position>
	<direction>
		<x>-1.37280</x>
		<y>0.0</y>
		<z>-1.06451</z>
	</direction>
	<ambient>
		<r>0.1</r>
		<g>0.1</g>
		<b>0.9</b>
		<a>0.8</a>
	</ambient>
	<diffuse>
		<r>0.0</r>
		<g>0.0</g>
		<b>0.4</b>
		<a>0.7</a>
	</diffuse>
	<specular>
		<r>0.4</r>
		<g>0.4</g>
		<b>0.7</b>
		<a>0.9</a>
	</specular>
	<dim-factor>
		<property>controls/lighting/FloodLightFactor</property>
		<factor>1</factor>
		<offset>0</offset>
		<min>0</min>
		<max>1</max>
	</dim-factor>
	<attenuation>
		<c>0</c>
		<l>0.001</l>
		<q>0.8</q>
	</attenuation>
	<exponent>1</exponent>
	<cutoff>100</cutoff>
	<near-m>0.001</near-m>
	<far-m>2.0</far-m>
    </animation>
 </PropertyList>