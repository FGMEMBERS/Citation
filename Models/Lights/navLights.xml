<?xml version="1.0"?>

<PropertyList>

 <path>sphereNavLights.ac</path>

     <animation>
        <type>select</type>
        <object-name>sphereNavLight.1</object-name>
        <condition>
            <and>
		<property>sim/rendering/rembrandt/enabled</property>
		<greater-than>
                    <property>sim/rendering/shaders/lights</property>
                    <value>2.0</value>
                </greater-than>
                <greater-than>
                    <property>systems/electrical/left-bus</property>
                    <value>5</value>
                </greater-than>
                <property>controls/lighting/nav-lights</property>
            </and>
        </condition>
    </animation>

	<animation>
		<type>light</type>
		<light-type>point</light-type>
		<name>NavLightLeft.light</name>
		<object-name>sphereNavLight.1</object-name>
		<nopreview/>
		<condition>
		<property>controls/lighting/nav-lights</property>
		</condition>
		<position>
			<x>6.95</x>
			<y>-8</y>
			<z>0</z>
		</position>
		<ambient>
			<r>0.2</r>
			<g>0</g>
			<b>0</b>
			<a>1</a>
		</ambient>
		<diffuse>
			<r>0.2</r>
			<g>0</g>
			<b>0</b>
			<a>0.4</a>
		</diffuse>
		<specular>
			<r>0.2</r>
			<g>0</g>
			<b>0</b>
			<a>0.4</a>
		</specular>
		<attenuation>
			<c>10.0</c>
			<l>2</l>
			<q>2</q>
		</attenuation>
		<near-m>0.1</near-m>
		<far-m>7.2</far-m>
	</animation>

    <animation>
        <type>select</type>
        <object-name>sphereNavLight.2</object-name>
        <condition>
            <and>
		<property>sim/rendering/rembrandt/enabled</property>
		<greater-than>
                    <property>sim/rendering/shaders/lights</property>
                    <value>2.0</value>
                </greater-than>
                <greater-than>
                    <property>systems/electrical/right-bus</property>
                    <value>5</value>
                </greater-than>
                <property>controls/lighting/nav-lights</property>
            </and>
        </condition>
    </animation>

	<animation>
            <type>light</type>
            <light-type>point</light-type>
            <name>NavLightRight.light</name>
            <object-name>sphereNavLight.2</object-name>
            <nopreview/>
            <condition>
		<property>controls/lighting/nav-lights</property>
            </condition>
		<position>
			<x>6.95</x>
			<y>8</y>
			<z>0</z>
		</position>
		<ambient>
			<r>0</r>
			<g>0.2</g>
			<b>0</b>
			<a>1</a>
		</ambient>
		<diffuse>
			<r>0</r>
			<g>0.2</g>
			<b>0</b>
			<a>0.4</a>
		</diffuse>
		<specular>
			<r>0</r>
			<g>0.2</g>
			<b>0</b>
			<a>0.4</a>
		</specular>
		<attenuation>
			<c>10.0</c>
			<l>2</l>
			<q>2</q>
		</attenuation>
		<near-m>0.1</near-m>
		<far-m>7.2</far-m>
	</animation>

 </PropertyList>
