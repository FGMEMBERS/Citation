<?xml version="1.0"?>

<PropertyList>

 <path>coneEngInstrLight.ac</path>

     <animation>
        <type>select</type>
        <object-name>IntLight.EngInstr.Cone</object-name>
        <condition>
            <and>
		<property>sim/rendering/rembrandt/enabled</property>
		<greater-than>
                    <property>/sim/rendering/shaders/lights</property>
                    <value>2.0</value>
                </greater-than>
            </and>
	    <or>
                <greater-than>
                    <property>systems/electrical/left-bus</property>
                    <value>5</value>
                </greater-than>
		<greater-than>
                    <property>systems/electrical/right-bus</property>
                    <value>5</value>
                </greater-than>
	    </or>
	    <not>
	      <and>
	        <property>engines/engine/started</property>
	        <property>engines/engine[1]/started</property>
	      </and>
	    </not>
        </condition>
    </animation>
    
    <animation>
	<type>light</type>
	<light-type>spot</light-type>
	<name>EngInstrLight</name>
	<object-name>IntLight.EngInstr.Cone</object-name>
	<nopreview/>
	<position>
		<x>2.42637</x>
		<y>0.0</y>
		<z>0.80347</z>
	</position>
	<direction>
		<x>-0.0</x>
		<y>0.0</y>
		<z>-1</z>
	</direction>
	<ambient>
		<r>0.9</r>
		<g>0.6</g>
		<b>0.4</b>
		<a>0.5</a>
	</ambient>
	<diffuse>
		<r>0.7</r>
		<g>0.4</g>
		<b>0.3</b>
		<a>0.7</a>
	</diffuse>
	<specular>
		<r>0.7</r>
		<g>0.4</g>
		<b>0.3</b>
		<a>0.9</a>
	</specular>
	<attenuation>
		<c>0.0</c>
		<l>8</l>
		<q>80</q>
	</attenuation>
	<cutoff>70</cutoff>
	<near-m>0.001</near-m>
	<far-m>2</far-m>
    </animation>
 </PropertyList>