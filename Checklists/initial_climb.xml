<PropertyList>
  <title>IV - Initial Climb</title>
  <item>
    <name>Indicated airspeed</name>
    <value>&lt; 250 kts</value>
    <condition>
      <less-than>
        <property>velocities/airspeed-kts</property>
        <value>250</value>
      </less-than>
    </condition>
  </item>
  <item>
    <name>Indicated altitude</name>
    <value>&lt; 10000 ft</value>
    <condition>
      <less-than>
        <property>position/altitude-ft</property>
        <value>10000</value>
      </less-than>
    </condition>
  </item>
  <item>
    <name>Autopilot bank angle</name>
    <value>LOW</value>
    <condition>
      <equals>
        <property>autopilot/settings/bank-limit</property>
        <value>14</value>
      </equals>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>autopilot/settings/bank-limit</property>
      <value>14</value>
    </binding>
  </item>
  <item>
    <name>Throttle</name>
    <value>FULL</value>
    <condition>
      <and>
        <greater-than>
          <property>controls/engines/engine[0]/throttle</property>
          <value>0.99</value>
        </greater-than>
        <greater-than>
          <property>controls/engines/engine[1]/throttle</property>
          <value>0.99</value>
        </greater-than>
      </and>
    </condition>
  </item>
  <item>
    <name>Indicated airspeed</name>
    <value>unlimited</value>
  </item>
  <item>
    <name>Indicated altitude</name>
    <value>18500 ft</value>
    <condition>
      <greater-than>
        <property>instrumentation/altimeter/indicated-altitude-ft</property>
        <value>18500</value>
      </greater-than>
    </condition>
  </item>
  <item>
    <name>Altimeter</name>
    <value>101.325 kPa</value>
    <condition>
      <greater-than>
        <property>instrumentation/altimeter/setting-kpa</property>
        <value>101.2</value>
      </greater-than>
      <less-than>
        <property>instrumentation/altimeter/setting-kpa</property>
        <value>101.4</value>
      </less-than>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>instrumentation/altimeter/setting-inhg</property>
      <value>29.92</value> <!-- this property drives the -kpa property -->
    </binding>
  </item>
</PropertyList>
