<?xml version="1.0"?>

<PropertyList>

  <name>Citation-II-config</name>
  <layout>hbox</layout>
  <resizable>false</resizable>
  <modal>false</modal>
  <draggable>true</draggable>

  <group>
    <layout>vbox</layout>
    <default-padding>0</default-padding>
    <padding>6</padding>

    <group>
      <layout>hbox</layout>

      <empty><stretch>1</stretch></empty>

      <text>
        <label>Citation II Options</label>
      </text>

      <empty><stretch>1</stretch></empty>

      <group>
        <layout>vbox</layout>
        <button>
          <pref-width>16</pref-width>
          <pref-height>16</pref-height>
          <legend></legend>
          <default>1</default>
          <keynum>27</keynum>
          <border>2</border>
          <binding>
            <command>dialog-close</command>
          </binding>
          <binding>
            <command>dialog-apply</command>
          </binding>
        </button>
      </group>
    </group>

    <hrule/>

    <group>
      <layout>hbox</layout>

      <group>
        <layout>vbox</layout>

        <group>
          <layout>vbox</layout>
          <checkbox>
            <halign>left</halign>
            <label>Save state of aircraft between sessions</label>
            <property>/controls/save-state/general</property>
            <live>true</live>
            <binding>
              <command>nasal</command>
              <script>
                saveState.switchProp("general");
              </script>
            </binding>
          </checkbox>
        </group>

        <group>
          <layout>hbox</layout>
          <group>
            <layout>vbox</layout>
          </group>

          <group>
            <layout>vbox</layout>
            <checkbox>
              <halign>left</halign>
              <label>Save fuel and weight settings</label>
              <enable>
                <property>/controls/save-state/general</property>
              </enable>
              <property>/controls/save-state/fuel</property>
              <live>true</live>
              <binding>
                <command>nasal</command>
                <script>
                  saveState.switchProp("fuel");
                </script>
              </binding>
            </checkbox>

            <checkbox>
              <halign>left</halign>
              <label>Save radio settings</label>
              <enable>
                <property>/controls/save-state/general</property>
              </enable>
              <property>/controls/save-state/radios</property>
              <live>true</live>
              <binding>
                <command>nasal</command>
                <script>
                  saveState.switchProp("radios");
                </script>
              </binding>
            </checkbox>

            <checkbox>
              <halign>left</halign>
              <label>Save models settings</label>
              <enable>
                <property>/controls/save-state/general</property>
              </enable>
              <property>/controls/save-state/models</property>
              <live>true</live>
              <binding>
                <command>nasal</command>
                <script>
                  saveState.switchProp("models");
                </script>
              </binding>
            </checkbox>

            <checkbox>
              <halign>left</halign>
              <label>Save circuit-breakers</label>
              <enable>
                <property>/controls/save-state/general</property>
              </enable>
              <property>/controls/save-state/circuitBreakers</property>
              <live>true</live>
              <binding>
                <command>nasal</command>
                <script>
                  saveState.switchProp("circuitBreakers");
                </script>
              </binding>
            </checkbox>
          </group>
        </group>

        <hrule/>

        <group>
          <layout>vbox</layout>

          <group>
            <layout>hbox</layout>
            <text>
              <label>Model Options</label>
            </text>
            <empty><stretch>1</stretch></empty>
          </group>


          <checkbox>
            <halign>left</halign>
            <label>Show yokes</label>
            <property>/sim/yokes-visible</property>
            <live>true</live>
            <binding>
              <command>dialog-apply</command>
            </binding>
          </checkbox>

          <checkbox>
            <halign>left</halign>
            <label>Show human models</label>
            <property>/controls/human-models</property>
            <live>true</live>
            <binding>
              <command>dialog-apply</command>
            </binding>
          </checkbox>
        </group>

      </group>

      <vrule/>

      <group>
        <layout>vbox</layout>

        <group>
          <layout>vbox</layout>

          <button>
            <legend>Select livery</legend>
            <equal>true</equal>
            <default>true</default>
            <binding>
              <command>nasal</command>
              <script>aircraft.livery.dialog.toggle()</script>
            </binding>
          </button>

          <button>
            <legend>Close all circuit breakers</legend>
            <equal>true</equal>
            <default>true</default>
            <binding>
              <command>nasal</command>
              <script> saveState.reset_circuitBreakers(); </script>
            </binding>
          </button>

          <button>
            <legend>Autostart</legend>
            <equal>true</equal>
            <default>true</default>
            <binding>
              <command>property-toggle</command>
              <property>sim/model/autostart</property>
            </binding>
          </button>

        </group>

        <hrule/>

        <group>
          <layout>vbox</layout>

          <button>
            <legend>Open checklists</legend>
            <equal>true</equal>
            <default>true</default>
            <binding>
              <command>dialog-show</command>
              <dialog-name>checklist</dialog-name>
            </binding>
          </button>

          <button>
            <legend>Open tutorials</legend>
            <equal>true</equal>
            <default>true</default>
            <binding>
              <command>dialog-show</command>
              <dialog-name>tutorial</dialog-name>
            </binding>
          </button>

          <button>
            <legend>Open help dialog</legend>
            <equal>true</equal>
            <default>true</default>
            <binding>
              <command>nasal</command>
              <script>gui.showHelpDialog("/sim/help")</script>
            </binding>
          </button>

          <button>
            <legend>Open wiki page</legend>
            <equal>true</equal>
            <default>true</default>
            <binding>
              <command>open-browser</command>
              <path>http://wiki.flightgear.org/Cessna_550_Citation_II</path>
            </binding>
          </button>

        </group>
      </group>

    </group>


    <hrule/>

    <group>
      <layout>hbox</layout>

      <empty><stretch>true</stretch></empty>

      <group>
        <layout>vbox</layout>

        <button>
          <legend>Save and close</legend>
          <equal>true</equal>
          <key>Esc</key>
          <default>true</default>
          <binding>
            <command>dialog-close</command>
          </binding>
          <binding>
            <command>dialog-apply</command>
          </binding>
        </button>

      </group>
    </group>

  </group>

</PropertyList>
