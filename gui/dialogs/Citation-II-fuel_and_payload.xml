<?xml version="1.0"?>

<PropertyList>

  <name>Citation-II-fuel_and_payload</name>
  <layout>vbox</layout>
  <resizable>false</resizable>
  <modal>false</modal>
  <draggable>true</draggable>

  <default-padding>0</default-padding>
  <padding>6</padding>

  <nasal>
    <open>
      setprop("/controls/fuelSet", 0);
    </open>
    <close>
      setprop("/controls/fuelSet", 1);
    </close>
  </nasal>

  <group>
    <layout>hbox</layout>

    <empty><stretch>1</stretch></empty>

    <text>
      <label>Citation II - Fuel and Payload Settings</label>
    </text>

    <empty><stretch>1</stretch></empty>

    <group>
      <layout>vbox</layout>
      <button>
        <pref-width>16</pref-width>
        <pref-height>16</pref-height>
        <legend></legend>
        <keynum>27</keynum>
        <border>2</border>
        <binding>
          <command>dialog-close</command>
        </binding>
        <binding>
          <command>dialog-apply</command>
        </binding>
      </button>
    </group>
  </group>

  <hrule/>

  <group>
    <layout>hbox</layout>
    <padding>10</padding>

    <group>
      <layout>vbox</layout>
      <padding>0</padding>
      <valign>top</valign>
      <text>
        <label>Fuel Tanks</label>
      </text>

      <group>
        <layout>table</layout>

        <text>
          <label>Tank</label>
          <row>0</row>
          <col>0</col>
        </text>
        <text>
          <label>Pounds</label>
          <row>0</row>
          <col>3</col>
        </text>
        <text>
          <label>Gallons</label>
          <row>0</row>
          <col>4</col>
        </text>
        <text>
          <label>Fraction</label>
          <row>0</row>
          <col>5</col>
        </text>

        <text>
          <label>1</label>
          <row>1</row>
          <col>0</col>
        </text>
        <checkbox>
          <row>1</row>
          <col>1</col>
          <name>tank-0-selected</name>
          <property>/consumables/fuel/tank[0]/selected</property>
          <binding>
            <command>dialog-apply</command>
            <object-name>tank-0-selected</object-name>
          </binding>
        </checkbox>
        <slider>
          <name>fuel-0</name>
          <row>1</row>
          <col>2</col>
          <min>0</min>
          <max>1</max>
          <live>true</live>
          <property>/consumables/fuel/tank[0]/level-norm</property>
          <binding>
            <command>dialog-apply</command>
            <object-name>fuel-0</object-name>
          </binding>
        </slider>
        <text>
          <row>1</row>
          <col>3</col>
          <label>12345678</label>
          <format>%.1f</format>
          <live>true</live>
          <property>/consumables/fuel/tank[0]/level-lbs</property>
        </text>
        <text>
          <row>1</row>
          <col>4</col>
          <label>12345678</label>
          <format>%.1f</format>
          <live>true</live>
          <property>/consumables/fuel/tank[0]/level-gal_us</property>
        </text>
        <text>
          <row>1</row>
          <col>5</col>
          <label>12345678</label>
          <format>%.2f</format>
          <live>true</live>
          <property>/consumables/fuel/tank[0]/level-norm</property>
        </text>

        <text>
          <label>2</label>
          <row>2</row>
          <col>0</col>
        </text>
        <checkbox>
          <row>2</row>
          <col>1</col>
          <name>tank-1-selected</name>
          <property>/consumables/fuel/tank[1]/selected</property>
          <binding>
            <command>dialog-apply</command>
            <object-name>tank-1-selected</object-name>
          </binding>
        </checkbox>
        <slider>
          <name>fuel-1</name>
          <row>2</row>
          <col>2</col>
          <min>0</min>
          <max>1</max>
          <live>true</live>
          <property>/consumables/fuel/tank[1]/level-norm</property>
          <binding>
            <command>dialog-apply</command>
            <object-name>fuel-1</object-name>
          </binding>
        </slider>
        <text>
          <row>2</row>
          <col>3</col>
          <label>12345678</label>
          <format>%.1f</format>
          <live>true</live>
          <property>/consumables/fuel/tank[1]/level-lbs</property>
        </text>
        <text>
          <row>2</row>
          <col>4</col>
          <label>12345678</label>
          <format>%.1f</format>
          <live>true</live>
          <property>/consumables/fuel/tank[1]/level-gal_us</property>
        </text>
        <text>
          <row>2</row>
          <col>5</col>
          <label>12345678</label>
          <format>%.2f</format>
          <live>true</live>
          <property>/consumables/fuel/tank[1]/level-norm</property>
        </text>

        <hrule>
          <row>3</row>
          <colspan>6</colspan>
        </hrule>

        <text>
          <halign>right</halign>
          <row>4</row>
          <col>2</col>
          <label>Total:</label>
        </text>
        <text>
          <row>4</row>
          <col>3</col>
          <label>12345678</label>
          <format>%.2f</format>
          <live>true</live>
          <property>/consumables/fuel/total-fuel-lbs</property>
        </text>
        <text>
          <row>4</row>
          <col>4</col>
          <label>12345678</label>
          <format>%.2f</format>
          <live>true</live>
          <property>/consumables/fuel/total-fuel-gal_us</property>
        </text>
        <text>
          <row>4</row>
          <col>5</col>
          <label>12345678</label>
          <format>%.2f</format>
          <live>true</live>
          <property>/consumables/fuel/total-fuel-norm</property>
        </text>
      </group>
    </group>

    <group>
      <layout>vbox</layout>
      <padding>0</padding>
      <valign>top</valign>
      <text>
        <label>Payload</label>
      </text>

      <group>
        <layout>table</layout>

        <text>
          <halign>right</halign>
          <label>Location</label>
          <row>0</row>
          <col>0</col>
        </text>
        <text>
          <label>Pounds</label>
          <row>0</row>
          <col>2</col>
        </text>

        <text>
          <label>Frt Baggage</label>
          <row>1</row>
          <col>0</col>
        </text>
        <slider>
          <name>weight-frt</name>
          <row>1</row>
          <col>1</col>
          <min>0</min>
          <max>350</max>
          <live>true</live>
          <property>/sim/weight[0]/weight-lb</property>
          <binding>
            <command>dialog-apply</command>
            <object-name>weight-frt</object-name>
          </binding>
        </slider>
        <text>
          <row>1</row>
          <col>2</col>
          <label>12345678</label>
          <format>%.0f</format>
          <live>true</live>
          <property>/sim/weight[0]/weight-lb</property>
        </text>

        <text>
          <halign>right</halign>
          <label>Crew</label>
          <row>2</row>
          <col>0</col>
        </text>
        <slider>
          <name>weight-crew</name>
          <row>2</row>
          <col>1</col>
          <min>100</min>
          <max>400</max>
          <live>true</live>
          <property>/sim/weight[1]/weight-lb</property>
          <binding>
            <command>dialog-apply</command>
            <object-name>weight-crew</object-name>
          </binding>
        </slider>
        <text>
          <row>2</row>
          <col>2</col>
          <label>12345678</label>
          <format>%.0f</format>
          <live>true</live>
          <property>/sim/weight[1]/weight-lb</property>
        </text>

        <text>
          <halign>right</halign>
          <label>Passengers</label>
          <row>3</row>
          <col>0</col>
        </text>
        <slider>
          <name>weight-pax</name>
          <row>3</row>
          <col>1</col>
          <min>0</min>
          <max>1200</max>
          <live>true</live>
          <property>/sim/weight[2]/weight-lb</property>
          <binding>
            <command>dialog-apply</command>
            <object-name>weight-pax</object-name>
          </binding>
        </slider>
        <text>
          <row>3</row>
          <col>2</col>
          <label>12345678</label>
          <format>%.0f</format>
          <live>true</live>
          <property>/sim/weight[2]/weight-lb</property>
        </text>

        <text>
          <halign>right</halign>
          <label>Rear Baggage</label>
          <row>4</row>
          <col>0</col>
        </text>
        <slider>
          <name>weight-rear</name>
          <row>4</row>
          <col>1</col>
          <min>0</min>
          <max>1200</max>
          <live>true</live>
          <property>/sim/weight[3]/weight-lb</property>
          <binding>
            <command>dialog-apply</command>
            <object-name>weight-rear</object-name>
          </binding>
        </slider>
        <text>
          <row>4</row>
          <col>2</col>
          <label>12345678</label>
          <format>%.0f</format>
          <live>true</live>
          <property>/sim/weight[3]/weight-lb</property>
        </text>
      </group>
    </group>
  </group>

  <group>
    <layout>hbox</layout>
    <padding>10</padding>

    <empty><stretch>1</stretch></empty>

    <group>
      <layout>table</layout>

      <text>
        <halign>right</halign>
        <label>Gross Weight:</label>
        <row>0</row>
        <col>0</col>
      </text>
      <text>
        <row>0</row>
        <col>1</col>
        <label>12345678</label>
        <format>%.0f lb</format>
        <live>true</live>
        <property>/fdm/yasim/gross-weight-lbs</property>
      </text>

      <text>
        <halign>right</halign>
        <label>Max Takeoff Weight:</label>
        <row>1</row>
        <col>0</col>
      </text>
      <text>
        <row>1</row>
        <col>1</col>
        <label>14100 lb</label>
      </text>

      <text>
        <halign>right</halign>
        <label>Max Landing Weight:</label>
        <row>2</row>
        <col>0</col>
      </text>
      <text>
        <row>2</row>
        <col>1</col>
        <label>13500 lb</label>
      </text>

      <text>
        <halign>right</halign>
        <label>Center of Gravity:</label>
        <row>3</row>
        <col>0</col>
      </text>
      <text>
        <row>3</row>
        <col>1</col>
        <label>12345678</label>
        <format>%.2f m</format>
        <live>true</live>
        <property>/fdm/yasim/cg-x-m</property>
      </text>
    </group>

    <empty><stretch>1</stretch></empty>

  </group>

  <hrule/>

  <group>
    <layout>hbox</layout>

    <button>
      <legend>Close</legend>
      <default>1</default>
      <equal>true</equal>
      <key>Esc</key>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>

  </group>

</PropertyList>
